<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: merge node instead of relative layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/avatar_text_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/colorAvatarTextColor"
        android:textSize="27dp"
        android:textAllCaps="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle_drawable"
        android:visibility="visible"
        tools:ignore="SpUsage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="72dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/regno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack87percent"
            android:textSize="16sp"
            tools:text="AAA111 (user)"/>

        <TextView
            android:id="@+id/park_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack38percent"
            android:textSize="14sp"
            tools:text="15:38:03"/>
    </LinearLayout>

</RelativeLayout>